class Solution {
    public int[] productExceptSelf(int[] arr) {
        int[] res = new int[arr.length];
        int prod=1;
        for(int i=0;i<arr.length;i++){
            prod*=arr[i];
        }
        for(int j=0;j<res.length;j++){
            if(arr[j]!=0)
                res[j]=prod/arr[j];
            else {
                int beg=0;
                int produ=1;
                while(beg!=arr.length){
                    if(beg==j) {
                        produ *= 1;
                        beg++;
                    }
                    else {
                        produ *= arr[beg];
                        beg++;
                    }
                }
                res[j]=produ;
                }
            }
        return res;
    }
}
